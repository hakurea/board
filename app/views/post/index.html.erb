<h1>안녕하세요 ::)</h1>

<a href="/post/new">글쓰기</a>

<% @posts.each do |post| %>
	<p>제목 : <%= post.title %></p>
	<p>내용 : <%= post.content %></p>
	<a href="/post/show/<%= post.id %>">보기</a>
	<a data-confirm="정말...지울...꺼야?" 
	data-method="delete" href="/post/destroy/<%= post.id %>">삭제</a>
	<a href="/post/edit/<%= post.id %>">수정</a>
	<hr>
<% end %>
